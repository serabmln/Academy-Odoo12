<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- ridwan.session tree view -->
        <record id="ridwan_session_view_tree" model="ir.ui.view">
            <field name="name">ridwan.session.view.tree</field>
            <field name="model">ridwan.session</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="session_date"/>
                    <field name="min_attendee"/>
                    <field name="taken_seats" widget="progressbar"/>
                </tree>
            </field>
        </record>
    
        <!-- ridwan.session form view -->
        <record id="ridwan_session_view_form" model="ir.ui.view">
            <field name="name">ridwan.session.view.form</field>
            <field name="model">ridwan.session</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name"/>
                                <field name="course_id"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="session_date"/>
                                <field name="min_attendee"/>
                               <field name="taken_seats" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="attendee" string="Attendee">
                                <field name="attendee_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="student_id"/>
                                        <field name="reg_date"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- ridwan.session action window -->
        <record id="ridwan_session_action" model="ir.actions.act_window">
            <field name="name">Session</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ridwan.session</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                    Create New Session..
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>

        <!-- ridwan_session search view -->
        <record id="model_name_view_search" model="ir.ui.view">
            <field name="name">ridwan_session.view.search</field>
            <field name="model">ridwan.session</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="instructor_id"/>

                        <group string="Group By">
                            <filter name = "group_by_course"
                                    string = "Course"
                                    context = "{'group_by':'course_id'}" />
                            <filter name = "group_by_instructor"
                                    string = "Instructor"
                                    context = "{'group_by':'instructor_id'}" />
                        </group>
                </search>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="ridwan_session_menu_act" name="Session" parent="ridwan_academy_menu_root" action="ridwan_session_action" sequence="10"/>
    
    </data>
    

</odoo>
