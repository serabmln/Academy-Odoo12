<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- female action -->
    <record id="patient_female_action" model="ir.actions.act_window">
        <field name="name">Female</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('gender', '=', 'female')]</field>
        <field name="context">{'default_gender' : 'female' }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"></p>
        </field>
    </record>

    <!-- male action -->
    <record id="patient_male_action" model="ir.actions.act_window">
        <field name="name">Male</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('gender', '=', 'male')]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"></p>
        </field>
    </record>
</odoo>
