<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_appointments_form" model="ir.ui.view">
        <field name="name">hospital_appointments.view.form</field>
        <field name="model">hospital.appointments</field>
        <field name="arch" type="xml">
            <form string="Form Hospital Appointments">
                <header>
                    <button id="button_confirm" name="action_confirm" string="CONFIRM" type="object" class="btn-primary" states="draft"/>
                    <button id="button_draft" name="action_draft" string="SET TO DRAFT" type="object" class="btn-primary" states="cancel"/>
                    <button id="button_done" name="action_done" string="MARK AS DONE" type="object" class="btn-primary" states="confirm"/>
                    <button id="button_cancel" name="action_cancel" string="CANCEL" type="object" states="draft,confirm,done"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender" force_save="1" readonly="1"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="date_appointment"/>
                            <field name="date_chekup"/>
                            <field name="note" force_save="1" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Doctor Prescription" name="doctor_prescription">
                           <group>
                                 <field name="prescrition"/>
                           </group>
                        </page>
                        <page name="medicine" string="Medicine">
                            <field name="prescription_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                    <group>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="other info" string="Other info">
                            <!-- <group>
                                
                            </group> -->
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_appointments_view_tree" model="ir.ui.view">
        <field name="name">hospital_appointments.view.tree</field>
        <field name="model">hospital.appointments</field>
        <field name="arch" type="xml">
            <tree string="Appointments Patients">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="age"/>
                <field name="date_appointment"/>
                <field name="date_chekup"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="appointments_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointments</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"></p>
        </field>
    </record>

</odoo>
